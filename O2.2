#include<iostream>
using namespace std;

const int MAXN = 100;
const int MAXM = 100;

void Nhap(float a[MAXN][MAXM], float& n, float& m)
{
	cout << "Nhap n: "; cin >> n;
	cout << "Nhap m: "; cin >> m;

	cout << "Nhap ma tran A: " << endl;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			cout << "a[" << i << "][" << j << "]= ";
			cin >> a[i][j];
		}
	}
}

float MaxA(float a[MAXN][MAXM], float n, float m)
{
	int max = a[0][0];
	for (int i = 1; i < n; i++)
	{
		for (int j = 1; j < m; j++)
		{
			if (a[i][j] > max) max = a[i][j];
		}
	}
	return max;
}

void TinhB(float a[MAXN][MAXM], float b[MAXN][MAXM], float n, float m)
{
	float L = MaxA(a, n, m);
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			b[i][j] = L - a[i][j];
		}
	}

	cout << "Ma tran B: " << endl;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			cout << b[i][j] << " ";
		}
		cout << endl;
	}
}


int main()
{
	float a[MAXN][MAXM],b[MAXN][MAXM], n, m;
	Nhap(a, n, m);
	TinhB(a, b, n, m);
	return 0;

}
